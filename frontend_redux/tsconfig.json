{
    "compilerOptions": {
        "outDir": "compiled",
        "module": "commonjs",
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": false,
        "allowSyntheticDefaultImports": true
      },
      "exclude": [
        "node_modules",
      ],
      "include": [
          "src/**/*"
      ]
}